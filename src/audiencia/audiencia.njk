---
layout: base.njk
pagination:
  data: audiencias
  size: 1
  alias: audiencia
permalink: "audiencia/{{ audiencia | slugify }}/"
showBackLink: true
eleventyComputed:
  title: "{{ audiencia }}"
  subtitle: "Audiencia: {{ audiencia }}"
---
<section>
  <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">Eventos para {{ audiencia }}</h2>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {% for event in events | filterByField("audiencia", audiencia) %}
    {% include "event-card.njk" %}
    {% endfor %}
  </div>
</section>
