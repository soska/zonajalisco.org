---
layout: base.njk
pagination:
  data: sedes
  size: 1
  alias: sede
permalink: "sede/{{ sede | slugify }}/"
showBackLink: true
eleventyComputed:
  title: "{{ sede }}"
  subtitle: "Sede: {{ sede }}"
---
{% from "icons.njk" import mapPin, phone, mail %}

{% set sedeSlug = sede | slugify %}
{% set church = null %}
{% for c in churches %}
  {% if c.id == sedeSlug %}
    {% set church = c %}
  {% endif %}
{% endfor %}

{% if church %}
<section class="mb-8">
  <div class="bg-white rounded-lg shadow-sm p-6 border border-gray-200">
    <h2 class="text-xl font-bold text-gray-800 mb-4">{{ church.nombre }}</h2>
    <div class="space-y-3 text-sm">
      {% if church.direccion %}
      <div class="flex items-start gap-2">
        <span class="text-gray-500 mt-0.5">{{ mapPin() }}</span>
        <span class="text-gray-700">{{ church.direccion }}</span>
      </div>
      {% endif %}
      {% if church.telefono %}
      <div class="flex items-center gap-2">
        <span class="text-gray-500">{{ phone() }}</span>
        <a href="tel:{{ church.telefono }}" class="text-blue-700 hover:underline hover:text-orange-700">{{ church.telefono }}</a>
      </div>
      {% endif %}
      {% if church.email %}
      <div class="flex items-center gap-2">
        <span class="text-gray-500">{{ mail() }}</span>
        <a href="mailto:{{ church.email }}" class="text-blue-700 hover:underline hover:text-orange-700">{{ church.email }}</a>
      </div>
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

<section>
  <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">Eventos en {{ sede }}</h2>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {% for event in events | filterByField("sede", sede) %}
    {% include "event-card.njk" %}
    {% endfor %}
  </div>
</section>
