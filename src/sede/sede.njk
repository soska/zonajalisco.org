---
layout: base.njk
pagination:
  data: sedes
  size: 1
  alias: sede
permalink: "sede/{{ sede | slugify }}/"
showBackLink: true
eleventyComputed:
  title: "{{ sede }}"
  subtitle: "Sede: {{ sede }}"
---
<section>
  <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">Eventos en {{ sede }}</h2>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {% for event in events | filterByField("sede", sede) %}
    {% include "event-card.njk" %}
    {% endfor %}
  </div>
</section>
