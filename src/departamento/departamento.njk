---
layout: base.njk
pagination:
  data: departamentos
  size: 1
  alias: departamento
permalink: "departamento/{{ departamento | slugify }}/"
showBackLink: true
eleventyComputed:
  title: "{{ departamento }}"
  subtitle: "Departamento: {{ departamento }}"
---
<section>
  <h2 class="text-2xl font-bold text-gray-800 mb-8 text-center">Eventos de {{ departamento }}</h2>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {% for event in events | filterByField("departamento", departamento) %}
    {% include "event-card.njk" %}
    {% endfor %}
  </div>
</section>
